{
  "name": "farmhand",
  "version": "0.0.0",
  "description": "A farming game",
  "homepage": "http://jeremyckahn.github.io/farmhand/",
  "scripts": {
    "build": "react-scripts build",
    "ci": "npm run lint && cross-env CI=true react-scripts test --env=jsdom",
    "deploy": "gh-pages -d build",
    "doc": "jsdoc -c .jsdoc -r src",
    "doc:live": "npm-run-all -p doc:watch doc:view",
    "doc:view": "live-server dist/doc --port=9124",
    "doc:watch": "nodemon --exec \"npm run doc\" --watch src --watch ./ --ext js,md --ignore dist",
    "lint": "eslint src",
    "postversion": "git push && git push --tags && npm run deploy",
    "predeploy": "npm run build",
    "prettier": "prettier 'src/**/*.js' --write",
    "preversion": "npm test",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "update-images": "sh update-images.sh"
  },
  "author": "Jeremy Kahn <jeremyckahn@gmail.com>",
  "license": "CC BY-NC-SA 4.0",
  "devDependencies": {
    "@jeremyckahn/minami": "^1.3.1",
    "cross-env": "^5.2.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint-plugin-import": "^2.17.3",
    "gh-pages": "^2.0.1",
    "husky": "^2.2.0",
    "jsdoc": "^3.5.5",
    "jsdom": "^15.0.0",
    "live-server": "^1.2.0",
    "node-sass": "^4.9.4",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "piskel-cli": "^1.0.41",
    "prettier": "^1.13.7",
    "pretty-quick": "^1.7.0",
    "react-scripts": "^3.0.1"
  },
  "dependencies": {
    "@material-ui/core": "^3.6.1",
    "@material-ui/icons": "^3.0.2",
    "classnames": "^2.2.6",
    "compass-mixins": "^0.12.10",
    "dinero.js": "^1.4.0",
    "eslint-config-react-app": "^4.0.1",
    "fast-memoize": "^2.5.1",
    "localforage": "^1.7.3",
    "lodash.sortby": "^4.7.0",
    "lodash.throttle": "^4.1.1",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-hotkeys": "^1.1.4",
    "typeface-francois-one": "0.0.71"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run ci",
      "pre-push": "npm run ci"
    }
  },
  "craGenerate": {
    "cssExtension": "sass"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
