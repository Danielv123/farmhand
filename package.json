{
  "name": "farmhand",
  "version": "0.0.0",
  "description": "A farming game",
  "main": "dist/app.js",
  "scripts": {
    "build": "npm-run-all build-css build-js",
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "build-js": "react-scripts build",
    "ci": "npm run lint && cross-env CI=true react-scripts test --env=jsdom",
    "deploy": "npm run build && gh-pages -d dist",
    "doc": "jsdoc -c .jsdoc -r src",
    "doc:live": "npm-run-all -p doc:watch doc:view",
    "doc:view": "live-server dist/doc --port=9124",
    "doc:watch": "nodemon --exec \"npm run doc\" --watch src --watch ./ --ext js,md --ignore dist",
    "lint": "eslint src",
    "postversion": "git push && git push --tags && npm run deploy",
    "precommit": "pretty-quick --staged && npm run ci",
    "prepush": "npm run ci",
    "prettier": "prettier 'src/**/*.js' --write",
    "preversion": "npm test",
    "start": "npm-run-all -p watch-css start-js",
    "start-js": "react-scripts start",
    "test": "npm run build-css && react-scripts test --env=jsdom",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive"
  },
  "author": "Jeremy Kahn <jeremyckahn@gmail.com>",
  "license": "CC BY-NC-SA",
  "devDependencies": {
    "@jeremyckahn/minami": "^1.3.1",
    "cross-env": "^5.2.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^5.1.0",
    "eslint-plugin-react": "^7.11.1",
    "gh-pages": "^1.2.0",
    "husky": "^0.14.3",
    "jsdoc": "^3.5.5",
    "jsdom": "^11.11.0",
    "live-server": "^1.2.0",
    "node-sass-chokidar": "^1.3.3",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.7",
    "pretty-quick": "^1.7.0",
    "react-scripts": "^1.1.5",
    "sinon": "^6.1.5"
  },
  "dependencies": {
    "compass-mixins": "^0.12.10",
    "dinero.js": "^1.4.0",
    "fast-memoize": "^2.5.1",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-notification-system": "^0.2.17",
    "typeface-francois-one": "0.0.54"
  },
  "craGenerate": {
    "cssExtension": "sass"
  }
}
